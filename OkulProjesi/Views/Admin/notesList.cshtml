@model IEnumerable<Entity.Notes>
@{
    ViewBag.Title = "notesList";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Öğrenci Adı-Soyadı</th>
                <th>Ders Adı</th>
                <th>Öğretmen Adı-Soyadı</th>
                <th>1.Sınav</th>
                <th>2.Sınav</th>
                <th>3.Sınav</th>
                <th>Ortalama</th>
                <th>Dersten Geçme Durumu</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Student.nameSurname</td>
                <td>@item.Lesson.lessonName</td>
                <td>@item.Teacher.nameSurname</td>
                <td>@item.note1</td>
                <td>@item.note2</td>
                <td>@item.note3</td>
                <td>@item.average</td>
                <td>@item.status</td>
                <td><a href="/Admin/notesUpdate/@item.notesID" class="btn btn-primary">Düzenle</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>


