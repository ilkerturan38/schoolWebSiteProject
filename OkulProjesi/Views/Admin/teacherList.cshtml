@model IEnumerable<Entity.ConCrete.Teacher>
@{
    ViewBag.Title = "teacherList";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Ad-Soyad</th>
                <th>Kimlik</th>
                <th>Doğum Tarihi</th>
                <th>Cinsiyet</th>
                <th>Telefon</th>
                <th>E-mail Adresi</th>
                <th>Resim</th>
                <th>Durum</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nameSurname</td>
                    <td>@item.identity</td>
                    <td>@item.birthday.ToShortDateString()</td>
                    <td>@item.gender</td>
                    <td>@item.phoneNumber</td>
                    <td>@item.userName</td>
                    <td><img src="@item.imageURL" alt="Alternate Text" width="160" height="160" /></td>
                    <td>@item.status</td>
                    <td><a href="/Admin/teacherUpdate/@item.teacherID" class="btn btn-primary">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/teacherInsert/" class="btn btn-outline-dark">Yeni Öğretmen Ekle</a>
</div>


