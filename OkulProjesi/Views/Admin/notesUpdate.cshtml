@model Entity.Notes
@{
    ViewBag.Title = "notesUpdate";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<style>
    body {
        background: #f7f7ff;
        margin-top: 20px;
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }

    .me-2 {
        margin-right: .5rem !important;
    }
</style>
<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("notesUpdate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="hidden" class="form-control" name="notesID" value="@Model.notesID">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="note1" value="@Model.note1">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="note2" value="@Model.note2">

                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="note3" value="@Model.note3">

                                </div>
                            </div>
                            
                                float s1 = Model.note1, s2 = Model.note2, s3 = Model.note3;
                                float sonuc = (s1 + s2 + s3) / 3;
                            
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">

                                    <input type="text" class="form-control" name="average" value="@sonuc">

                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="studentID" value="@Model.studentID">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="lessonID" value="@Model.lessonID">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="teacherID" value="@Model.teacherID">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <button type="submit" class="btn btn-primary">Bölümü Güncelle</button>
                                </div>
                            </div>
                        }
                    </div>
                    @if (TempData["hata"] != null)
                    {
                        <div class="alert-warning animate__animated animate__fadeInLeft">
                            <strong>@TempData["hata"]</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

