@model IEnumerable<Entity.ConCrete.Lesson>
@{
    ViewBag.Title = "lessonList";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Ders Adı</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.lessonID</td>
                <td>@item.lessonName</td>
                <td><a href="/Admin/lessonUpdate/@item.lessonID" class="btn btn-primary">Düzenle</a></td>
                <td><a href="/Admin/lessonDelete/@item.lessonID" class="btn btn-success">Sil</a></td>
            </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/lessonInsert/" class="btn btn-outline-dark">Yeni Ders Ekle</a>
</div>


