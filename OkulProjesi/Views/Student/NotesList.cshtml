
@{
    ViewBag.Title = "NotesList";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Ders Adı</th>
                <th>Not 1</th>
                <th>Not 2</th>
                <th>Not 3</th>
                <th>Ortalama</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Lesson.lessonName</td>
                    <td>@item.note1</td>
                    <td>@item.note2</td>
                    <td>@item.note3</td>
                    <td>@item.average</td>
                    <td>@item.status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

