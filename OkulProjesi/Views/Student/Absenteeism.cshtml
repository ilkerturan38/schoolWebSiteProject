@model Entity.ConCrete.Absenteeism
@{
    ViewBag.Title = "Absenteeism";
    Layout = "~/Views/Shared/UserTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Normal Devamsızlık</th>
                <th>Mazeretli Devamsızlık</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.absenteeismID</td>
                    <td>@Model.normalAbsenteeismCounts</td>
                    <td>@Model.excusedAbsenteeismCounts</td>
                </tr>
        </tbody>
    </table>
</div>

